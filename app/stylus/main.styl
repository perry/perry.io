@import 'nib'

global-reset()

$site-padding = 20px
$link-color = #039be5
$sans-serif = Helvetica, Arial, sans-serif

@keyframes fade-down
    0%
        opacity: 0
        transform: translate3d(0, -15%, 0)
    100%
        opacity: 1
        transform: none

@keyframes fade-in
    0%
        opacity: 0
    100%
        opacity: 1

.cssanimations
    .fade-down
        opacity: 0
        transform: translate3d(0, -15%, 0)
    .fade-in
        opacity: 0

    .images-loaded
        .fade-down
            animation: fade-down 1000ms ease-out
            animation-fill-mode: forwards

        .fade-in
            animation: fade-in 700ms ease-in
            animation-fill-mode: forwards

.heading
    .cssanimations .images-loaded &
        animation-delay: 200ms

.description,
.below-fold,
.footer
    .cssanimations .images-loaded &
        animation-delay: 1000ms

*
    box-sizing: border-box

h1,
h2,
h3,
h4,
h5,
h6,
strong,
b
    font-weight: normal

h2
    display: inline-block
    border-bottom: 1px solid

h2,
h3
    margin-bottom: 0.5em

em,
i
    font-style: normal

small
    font-size: 70%
a
    text-decoration: none
    color: $link-color
    transition: color 300ms ease-in
    &:hover
        border-bottom: 1px solid
        color: darken($link-color, 20%)
    &:active
        color: darken($link-color, 30%)
html,
body
    font-size: 20px
body
    font-family: $sans-serif
    line-height: 1.6
    color: #222
    -webkit-font-smoothing: antialiased
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0)
    -webkit-tap-highlight-color: none

$container
    width: 100%
    .structure
        max-width: 80%
        margin: 0 auto
        padding: (3 * $site-padding) $site-padding
        @media only screen and (min-device-width: 320px)
            max-width: 95%
            padding-right: 0.5 * $site-padding
            padding-left: 0.5 * $site-padding

.above-fold
    @extend $container

.perry
    margin: 0 auto
    margin-bottom: 2 * $site-padding
    display: block
    width: 180px
    height: 180px
    border-radius: 180px
    overflow: hidden
    img
        max-width: 100%
        height: auto

.title
    text-align: center
    text-transform: uppercase
    letter-spacing: 0.1em
    font-size: 1.9em
    font-weight: normal
    white-space: nowrap
    margin-bottom: 2 * $site-padding

.description
    text-align: center

.project-list
    margin-bottom: 2 * $site-padding
    li
        font-size: 1em

.below-fold
    @extend $container
    background: darken(#fff, 3%)

.footer
    @extend $container
    font-size: 1em
